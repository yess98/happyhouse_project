<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- name space는 UserRepo의 fully qualified name으로 설정한다. -->
<mapper namespace="com.ssafy.happyhouse.model.mapper.UserRepo">
	
	<!-- User 정보를 조회한다. -->
	<select id="select" parameterType="string" resultType="User">
	
			select * from member where id= #{id}	
	</select>
	<insert id="insert" parameterType="User">
		insert into member (id, pwd, name,addr, phone)
			values(#{id},#{pwd},#{name},#{addr},#{phone})
	</insert>
		
	<update id="update" parameterType="User">
		update member
		<trim prefix="set" suffixOverrides=",">
			<if test="pwd != null">pwd = #{pwd},</if>
			<if test="addr != null">addr = #{addr},</if>
			<if test="phone != null">phone = #{phone},</if>
		</trim>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="String">
		delete from member
		where id = #{id}
	</delete>
	<select id="listMember" resultType="User">
		select id,pwd,name,addr,phone 
		from member 
	</select>
	<select id="login" parameterType="map" resultType="User">
		select name, id
		from member
		where id = #{id} and pwd = #{pwd}
	</select>
	
	<select id = "searchMember" resultType = "User">
		select id, pwd, name, addr, phone 
		from member 
		<include refid="search"></include>
	</select>
	<sql id="search">
		<if test="word != null and word != ''">
			<if test="key == 'addr'">
				where addr like concat('%', #{word}, '%')
			</if>
			<if test="key != 'addr'">
				where ${key} = #{word}
			</if>
		</if>
	</sql>
	<select id="idCheck" parameterType="string" resultType="int">
		select count(id) from member where id = #{id}
	</select>
	
</mapper>